<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer autoDrawBackground="true"
				toolTip="{data.name}"
				xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx">

	<s:Group width="35"
			 height="35"
			 buttonMode="true"
			 mouseChildren="true">

		<s:layout>
			<s:VerticalLayout paddingBottom="5" paddingRight="5" />
		</s:layout>

		<s:BorderContainer width="30"
						   height="30"
						   backgroundColor="{data.color}"
						   borderStyle="solid"
						   cornerRadius="5" />
	</s:Group>
</s:ItemRenderer>
